<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookLib</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bgpage">
    <header>
        <nav class="header">
            <div class="flexu">
                <a class="navbar-brand" asp-area="" asp-page="/MainPage">BookLib</a>
                <a class="btn subu logout" asp-area="" asp-page="/Logout">Logout</a>
                <a class="btn subu settings" asp-area="" asp-page="/Settings">Settings</a>
                <a class="btn subu booklist" asp-area="" asp-page="/MainPage">Book List</a>
                <a class="btn subu addbtn" asp-area="" asp-page="/Add">Add Book</a>
                <a class="btn subu imex" asp-area="" asp-page="/ImEx">Import/Export</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - BookLib
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
